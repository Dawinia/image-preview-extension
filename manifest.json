{
  "manifest_version": 3,
  "name": "Enhanced Image Previewer",
  "version": "1.0",
  "description": "一个强大的图片预览插件，支持缩放、拖拽和加载动画",
  "author": "dawinialo@gmail.com",
  "homepage_url": "https://github.com/dawinialo/image-preview-extension",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Enhanced Image Previewer"
  },
  "permissions": ["activeTab", "storage", "commands"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/styles.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "激活扩展"
    },
    "toggle_last_preview": {
      "suggested_key": {
        "default": "Alt+Z"
      },
      "description": "切换最后一个预览"
    }
  }
}
